@page
@model GymEnCasa.App.Presentacion.Pages.EliminarUModel
@{
        ViewData["Title"] = "Eliminar Usuario";
}

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

<!-- Bootstrap library -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>




<br>
<h2 Class ="Text-info" style="text-align: center;">Eliminar Usuario 
</h2>
<p>Favor ingrese el correo del usuario a eliminar:
</p>
<div class="border">
    <form method="post">
        <br>
            <div class="col-sm-4">
                <input asp-for ="Usuario.Correo">
            </div>
                        
            <div class="col-sm-2">
                <!-- Trigger the modal with a button -->
                <button type="button" class="btn btn-danger openBtn">Eliminar</button>
                <a asp-page="/Index" class="btn btn-success form-control">Volver
                </a>
            </div>
    </form>  
</div>



<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <!-- <button type="button" class="close" data-dismiss="modal">&times;</button> -->
                <h2 class="modal-title">¿Seguro que quiere darse de baja?</h2>
                
            </div>
            <div class="modal-body">
                <h4 class="modal-title">Te invitamos a que continues, pronto verás los resultados</h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Eliminar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<script>
$('.openBtn').on('click',function()
    {
    $('.modal-body').load('content.html',function()
        {
        $('#myModal').modal({show:true});
        });
    });
    
</script>